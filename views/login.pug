h1 Hello user!
// register form
block content
    form(method='POST' action='/login')
      div.form-group
        label(for='name') Login:
        input#name.form-control(type='text' name='username')
      div.form-group
        label(for='pw') Password:
        input#pw.form-control(type='password' name='password')
      button(type='submit') Login